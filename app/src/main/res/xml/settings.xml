<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Dark Mode">
        <SwitchPreferenceCompat
            android:id="@+id/switchbox_darkmode"
            android:defaultValue="false"
            android:key="CheckDark"
            android:summaryOff="Dark Mode is disabled"
            android:summaryOn="Dark Mode is enabled"
            android:title="Enable Dark Mode " />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="About"
        >
        <Preference
            android:title="Version"
            android:summary="1.0.0"/>
    </PreferenceCategory>


</PreferenceScreen>